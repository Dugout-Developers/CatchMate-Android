<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey0"
    tools:context=".view.support.TermsAndPoliciesFragment">

    <include
        android:id="@+id/layout_header_temrs_and_policies"
        layout="@layout/layout_header_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_personal_info_terms_and_policies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/terms_and_policies_personal_info"
        android:textAppearance="@style/Typography.Body01.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_header_temrs_and_policies" />

    <TextView
        android:id="@+id/tv_service_policy_terms_and_policies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/terms_and_policies_service_policy"
        android:textAppearance="@style/Typography.Body01.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_personal_info_terms_and_policies" />

    <TextView
        android:id="@+id/tv_community_guide_terms_and_policies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/terms_and_policies_community_guide"
        android:textAppearance="@style/Typography.Body01.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_service_policy_terms_and_policies" />
</androidx.constraintlayout.widget.ConstraintLayout>