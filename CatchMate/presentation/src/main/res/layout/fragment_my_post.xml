<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mypage.MyPostFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_my_post_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="18dp"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn_my_post_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:src="@drawable/shape_all_rect_r6"
        app:layout_constraintStart_toStartOf="@+id/guideline_my_post_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_my_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/my_post_title"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_my_post_back"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_my_post_back"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_my_post_back" />
</androidx.constraintlayout.widget.ConstraintLayout>