<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_received_join_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_received_join_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_received_join_item_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_received_join_item_time"
        tools:text="06.09 | " />

    <TextView
        android:id="@+id/tv_received_join_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_received_join_item_place"
        app:layout_constraintStart_toEndOf="@+id/tv_received_join_item_date"
        app:layout_constraintTop_toTopOf="@+id/guideline_received_join_top"
        tools:text="17:00 | " />

    <TextView
        android:id="@+id/tv_received_join_item_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_received_join_item_time"
        app:layout_constraintTop_toTopOf="@+id/guideline_received_join_top"
        tools:text="사직" />

    <TextView
        android:id="@+id/tv_received_join_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_all_rect_r10"
        android:backgroundTint="#FFF2F2"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:textColor="@color/brand500"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_received_join_item_date"
        tools:text="3/4" />

    <TextView
        android:id="@+id/tv_received_join_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_received_join_item_count"
        app:layout_constraintStart_toEndOf="@+id/tv_received_join_item_count"
        app:layout_constraintTop_toTopOf="@+id/tv_received_join_item_count"
        tools:text="카리나 시구 보러 같이 가실 분" />

    <ImageButton
        android:id="@+id/imgbtn_received_join_item_move"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="18dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/tv_received_join_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_received_join_top"
        app:srcCompat="@drawable/shape_all_rect_r6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_received_join_item_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_received_join_item_title"
        tools:itemCount="1"
        tools:listitem="@layout/item_profile" />
</androidx.constraintlayout.widget.ConstraintLayout>