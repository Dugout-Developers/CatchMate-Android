<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imgbtn_onboarding_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/main_grid_margin"
        android:layout_marginTop="@dimen/tab_bar_grid_margin"
        android:layout_marginBottom="@dimen/tab_bar_grid_margin"
        android:background="@null"
        android:src="@drawable/vec_all_left_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn_onboarding_indicator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/vec_onboarding_indicator_deactivate"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_onboarding_indicator2"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_onboarding_indicator2"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_onboarding_indicator2" />

    <ImageButton
        android:id="@+id/imgbtn_onboarding_indicator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/vec_onboarding_indicator_deactivate"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_onboarding_indicator3"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_onboarding_indicator3"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_onboarding_indicator3" />

    <ImageButton
        android:id="@+id/imgbtn_onboarding_indicator3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_grid_margin"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/vec_onboarding_indicator_deactivate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>