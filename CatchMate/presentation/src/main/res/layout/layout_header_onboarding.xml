<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/grey0">

    <ImageButton
        android:id="@+id/imgbtn_onboarding_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="13dp"
        android:background="@null"
        android:padding="5dp"
        android:src="@drawable/vec_all_left_arrow_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn_onboarding_indicator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/vec_onboarding_indicator_deactivate_6dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_onboarding_indicator2"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_onboarding_indicator2"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_onboarding_indicator2" />

    <ImageButton
        android:id="@+id/imgbtn_onboarding_indicator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/vec_onboarding_indicator_deactivate_6dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_onboarding_indicator3"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_onboarding_indicator3"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_onboarding_indicator3" />

    <ImageButton
        android:id="@+id/imgbtn_onboarding_indicator3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/vec_onboarding_indicator_deactivate_6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_onboarding_indicator4"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="360dp" />

    <ImageButton
        android:id="@+id/imgbtn_onboarding_indicator4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_grid_margin"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/vec_onboarding_indicator_deactivate_6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>