<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".home.HomeFilterFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_home_filter_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="18dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_home_filter_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="18dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_home_filter_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="14dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_home_filter_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/shape_all_rect_r6"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toTopOf="@+id/guideline_home_filter_top" />

    <ImageView
        android:id="@+id/iv_home_filter_save"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/shape_all_rect_r6"
        app:layout_constraintEnd_toStartOf="@+id/guideline_home_filter_right"
        app:layout_constraintTop_toTopOf="@+id/guideline_home_filter_top" />

    <TextView
        android:id="@+id/tv_home_filter_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/filter_title_date"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_filter_back" />

    <EditText
        android:id="@+id/edt_home_filter_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/guideline_home_filter_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_filter_title_date" />

    <TextView
        android:id="@+id/tv_home_filter_title_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/filter_title_team"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toBottomOf="@+id/edt_home_filter_date" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_nc"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_nc_dinos_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintEnd_toStartOf="@+id/toggle_home_filter_samsung"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_filter_title_team" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_samsung"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:background="@drawable/selector_samsung_lions_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintEnd_toStartOf="@+id/toggle_home_filter_ssg"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/toggle_home_filter_nc"
        app:layout_constraintTop_toTopOf="@+id/toggle_home_filter_nc" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_ssg"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:background="@drawable/selector_ssg_landers_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintEnd_toStartOf="@+id/toggle_home_filter_doosan"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/toggle_home_filter_samsung"
        app:layout_constraintTop_toTopOf="@+id/toggle_home_filter_samsung" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_doosan"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:background="@drawable/selector_doosan_bears_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintBottom_toBottomOf="@+id/toggle_home_filter_ssg"
        app:layout_constraintEnd_toStartOf="@+id/guideline_home_filter_right"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/toggle_home_filter_ssg"
        app:layout_constraintTop_toTopOf="@+id/toggle_home_filter_ssg" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_kt"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_kt_wiz_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintEnd_toStartOf="@+id/toggle_home_filter_hanwha"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toBottomOf="@+id/toggle_home_filter_nc" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_hanwha"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:background="@drawable/selector_hanwha_eagles_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintEnd_toStartOf="@+id/toggle_home_filter_lotte"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/toggle_home_filter_kt"
        app:layout_constraintTop_toTopOf="@+id/toggle_home_filter_kt" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_lotte"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:background="@drawable/selector_lotte_giants_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintEnd_toStartOf="@+id/toggle_home_filter_kia"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/toggle_home_filter_hanwha"
        app:layout_constraintTop_toTopOf="@+id/toggle_home_filter_hanwha" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_kia"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:background="@drawable/selector_kia_tigers_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline_home_filter_right"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/toggle_home_filter_lotte"
        app:layout_constraintTop_toTopOf="@+id/toggle_home_filter_lotte" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_lg"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_lg_twins_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toBottomOf="@+id/toggle_home_filter_kt" />

    <ToggleButton
        android:id="@+id/toggle_home_filter_kiwoom"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:background="@drawable/selector_kiwoom_heroes_bg"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintStart_toStartOf="@+id/toggle_home_filter_hanwha"
        app:layout_constraintTop_toTopOf="@+id/toggle_home_filter_lg" />

    <TextView
        android:id="@+id/tv_home_filter_title_head_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/filter_title_head_count"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toBottomOf="@+id/toggle_home_filter_lg" />

    <EditText
        android:id="@+id/edt_home_filter_head_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/guideline_home_filter_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_home_filter_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_filter_title_head_count" />

</androidx.constraintlayout.widget.ConstraintLayout>