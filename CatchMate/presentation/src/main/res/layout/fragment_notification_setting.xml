<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mypage.NotificationSettingFragment" >

    <include
        android:id="@+id/layout_header_notification_setting"
        layout="@layout/layout_header_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_header_notification_setting">

        <TextView
            android:id="@+id/tv_notification_setting_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small"
            android:text="@string/mypage_setting_notification_setting_all"
            android:textAppearance="@style/Typography.Body01.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_notification_setting_all"
            style="@style/Widget.App.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/main_grid_margin"
            android:background="@null"
            android:thumb="@drawable/shape_notification_switch_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/tv_notification_setting_all"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_notification_setting_all"
            app:thumbIconSize="28dp"
            app:thumbTint="@null"
            app:track="@drawable/selector_notification_switch_track"
            app:trackDecoration="@null"
            app:trackDecorationTint="@null"
            app:trackTint="@color/color_switch_track_color" />

        <TextView
            android:id="@+id/tv_notification_setting_chatting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/medium"
            android:paddingTop="@dimen/small"
            android:paddingBottom="@dimen/small"
            android:text="@string/mypage_setting_notification_setting_chatting"
            android:textAppearance="@style/Typography.Body01.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_notification_setting_all" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_notification_setting_chatting"
            style="@style/Widget.App.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/main_grid_margin"
            android:background="@null"
            android:thumb="@drawable/shape_notification_switch_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/tv_notification_setting_chatting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_notification_setting_chatting"
            app:thumbIconSize="28dp"
            app:thumbTint="@null"
            app:track="@drawable/selector_notification_switch_track"
            app:trackDecoration="@null"
            app:trackDecorationTint="@null"
            app:trackTint="@color/color_switch_track_color" />

        <TextView
            android:id="@+id/tv_notification_setting_join"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/medium"
            android:paddingTop="@dimen/small"
            android:paddingBottom="@dimen/small"
            android:text="@string/mypage_setting_notification_setting_join"
            android:textAppearance="@style/Typography.Body01.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_notification_setting_chatting" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_notification_setting_join"
            style="@style/Widget.App.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/main_grid_margin"
            android:background="@null"
            android:thumb="@drawable/shape_notification_switch_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/tv_notification_setting_join"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_notification_setting_join"
            app:thumbIconSize="28dp"
            app:thumbTint="@null"
            app:track="@drawable/selector_notification_switch_track"
            app:trackDecoration="@null"
            app:trackDecorationTint="@null"
            app:trackTint="@color/color_switch_track_color" />

        <TextView
            android:id="@+id/tv_notification_setting_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/medium"
            android:paddingTop="@dimen/small"
            android:paddingBottom="@dimen/small"
            android:text="@string/mypage_setting_notification_setting_event"
            android:textAppearance="@style/Typography.Body01.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_notification_setting_join" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_notification_setting_event"
            style="@style/Widget.App.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/main_grid_margin"
            android:background="@null"
            android:thumb="@drawable/shape_notification_switch_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/tv_notification_setting_event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_notification_setting_event"
            app:thumbIconSize="28dp"
            app:thumbTint="@null"
            app:track="@drawable/selector_notification_switch_track"
            app:trackDecoration="@null"
            app:trackDecorationTint="@null"
            app:trackTint="@color/color_switch_track_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>