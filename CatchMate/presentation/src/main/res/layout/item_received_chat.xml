<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_received_chat_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/vec_all_default_profile" />

    <TextView
        android:id="@+id/tv_received_chat_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tiny"
        android:layout_marginTop="@dimen/xstiny"
        android:paddingBottom="@dimen/tiny"
        android:textAppearance="@style/Typography.Body03.SemiBold"
        android:textColor="@color/grey600"
        app:layout_constraintStart_toEndOf="@+id/iv_received_chat_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="벨리곰쳐돌이" />

    <TextView
        android:id="@+id/tv_received_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_chatting_received_chat_bg"
        android:maxWidth="240dp"
        android:paddingLeft="@dimen/small"
        android:paddingTop="@dimen/xsmall"
        android:paddingRight="@dimen/small"
        android:paddingBottom="@dimen/xsmall"
        android:textAppearance="@style/Typography.Body02.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_received_chat_nickname"
        tools:text="집나간 벨리곰 찾습니다 집나간 벨리곰 찾습니다 집나간 벨리곰 찾습니다 집나간 벨리곰 찾습니다 집나간 벨리곰 찾습니다 집나간 벨리곰 찾습니다" />

    <TextView
        android:id="@+id/tv_received_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tiny"
        android:textAppearance="@style/Typography.Caption01.Medium"
        android:textColor="@color/grey500"
        app:layout_constraintBottom_toBottomOf="@+id/tv_received_chat_message"
        app:layout_constraintStart_toEndOf="@+id/tv_received_chat_message"
        tools:text="오전 9:01" />
</androidx.constraintlayout.widget.ConstraintLayout>