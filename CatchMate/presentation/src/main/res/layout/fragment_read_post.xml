<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey0"
    tools:context=".view.post.ReadPostFragment">

    <include
        android:id="@+id/layout_read_post_header"
        layout="@layout/layout_header_kebab_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_read_post_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/main_grid_margin"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_read_post_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="@dimen/main_grid_margin" />

    <TextView
        android:id="@+id/tv_read_post_head_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smedium"
        android:textAppearance="@style/Typography.Body03.SemiBold"
        android:textColor="@color/brand500"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/layout_read_post_header"
        tools:text="3/4" />

    <TextView
        android:id="@+id/tv_read_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xstiny"
        android:textAppearance="@style/Typography.Body01.Medium"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_read_post_head_count"
        tools:text="연패는 안 된다 쉬었잖아 제발" />

    <TextView
        android:id="@+id/tv_read_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny"
        android:textAppearance="@style/Typography.Body02.Medium"
        android:textColor="@color/grey500"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_read_post_title"
        tools:text="07.03 | " />

    <TextView
        android:id="@+id/tv_read_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Typography.Body02.Medium"
        android:textColor="@color/grey500"
        app:layout_constraintBottom_toBottomOf="@+id/tv_read_post_date"
        app:layout_constraintStart_toEndOf="@+id/tv_read_post_date"
        app:layout_constraintTop_toTopOf="@+id/tv_read_post_date"
        tools:text="18:30 | " />

    <TextView
        android:id="@+id/tv_read_post_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Typography.Body02.Medium"
        android:textColor="@color/grey500"
        app:layout_constraintBottom_toBottomOf="@+id/tv_read_post_date"
        app:layout_constraintStart_toEndOf="@+id/tv_read_post_time"
        app:layout_constraintTop_toTopOf="@+id/tv_read_post_date"
        tools:text="잠실" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_read_post_writer_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/guideline_read_post_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_read_post_date">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_read_post_writer_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/vec_login_naver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_read_post_writer_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tiny"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            android:textAppearance="@style/Typography.Body02.Medium"
            app:layout_constraintBottom_toTopOf="@+id/tv_read_post_writer_team"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/iv_read_post_writer_profile_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="닉네임은열글자까지만" />

        <TextView
            android:id="@+id/tv_read_post_writer_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tiny"
            android:layout_marginBottom="2dp"
            android:background="@drawable/shape_my_page_lotte_badge_bg"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:textAppearance="@style/Typography.Caption01.Medium"
            android:textColor="@color/grey0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/iv_read_post_writer_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_read_post_writer_nickname"
            tools:text="@string/badge_lotte_giants" />

        <TextView
            android:id="@+id/tv_read_post_writer_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xtiny"
            android:background="@drawable/shape_all_rect_r20"
            android:backgroundTint="@color/grey50"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/xstiny"
            android:paddingRight="10dp"
            android:paddingBottom="@dimen/xstiny"
            android:textAppearance="@style/Typography.Caption01.Medium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_read_post_writer_team"
            app:layout_constraintStart_toEndOf="@+id/tv_read_post_writer_team"
            app:layout_constraintTop_toTopOf="@+id/tv_read_post_writer_team"
            tools:text="@string/male" />

        <TextView
            android:id="@+id/tv_read_post_writer_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xtiny"
            android:background="@drawable/shape_all_rect_r20"
            android:backgroundTint="@color/grey50"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/xstiny"
            android:paddingRight="10dp"
            android:paddingBottom="@dimen/xstiny"
            android:textAppearance="@style/Typography.Caption01.Medium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_read_post_writer_team"
            app:layout_constraintStart_toEndOf="@+id/tv_read_post_writer_gender"
            app:layout_constraintTop_toTopOf="@+id/tv_read_post_writer_team"
            tools:text="26세" />

        <ImageButton
            android:id="@+id/imgbtn_read_post_writer_move_to_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/vec_all_right_arrow_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider_read_post"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small"
        android:background="@color/grey50"
        app:layout_constraintEnd_toStartOf="@+id/guideline_read_post_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/layout_read_post_writer_profile" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_read_post_game_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        app:cardBackgroundColor="@color/grey50"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_read_post_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/divider_read_post">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_read_post_home_team"
                android:layout_width="50dp"
                android:layout_height="67dp"
                android:layout_marginTop="@dimen/xsmall"
                android:layout_marginRight="@dimen/base"
                app:cardBackgroundColor="@color/doosan_bears"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_read_post_game_info_vs"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_read_post_home_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tiny"
                android:layout_marginBottom="@dimen/xsmall"
                android:gravity="center"
                android:textAppearance="@style/Typography.Body02.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cv_read_post_home_team"
                app:layout_constraintStart_toStartOf="@+id/cv_read_post_home_team"
                app:layout_constraintTop_toBottomOf="@+id/cv_read_post_home_team"
                tools:text="@string/team_lotte_giants" />

            <TextView
                android:id="@+id/tv_read_post_game_info_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/versus"
                android:textAppearance="@style/Typography.Body03.Medium"
                android:textColor="@color/grey500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_read_post_away_team"
                android:layout_width="50dp"
                android:layout_height="67dp"
                android:layout_marginLeft="@dimen/base"
                android:layout_marginTop="@dimen/xsmall"
                app:cardBackgroundColor="@color/hanwha_eagles"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@+id/tv_read_post_game_info_vs"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_read_post_away_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tiny"
                android:layout_marginBottom="@dimen/xsmall"
                android:textAppearance="@style/Typography.Body02.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cv_read_post_away_team"
                app:layout_constraintStart_toStartOf="@+id/cv_read_post_away_team"
                app:layout_constraintTop_toBottomOf="@+id/cv_read_post_away_team"
                tools:text="@string/team_hanwha_eagles" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider_read_post_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small"
        android:background="@color/grey50"
        app:layout_constraintEnd_toStartOf="@+id/guideline_read_post_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/cv_read_post_game_info" />

    <TextView
        android:id="@+id/tv_read_post_additional_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:text="@string/post_additional_info"
        android:textAppearance="@style/Typography.Body02.Medium"
        android:textColor="@color/grey500"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/divider_read_post_2" />

    <TextView
        android:id="@+id/tv_read_post_additional_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xsmall"
        android:textAppearance="@style/Typography.Body01.Medium"
        app:layout_constraintEnd_toStartOf="@+id/guideline_read_post_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_read_post_additional_info_title"
        tools:text="정보예요" />

    <TextView
        android:id="@+id/tv_read_post_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium"
        android:text="@string/post_preferences_title"
        android:textAppearance="@style/Typography.Body02.Medium"
        android:textColor="@color/grey500"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_read_post_additional_info" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_read_post_preferences"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xsmall"
        app:layout_constraintEnd_toStartOf="@+id/guideline_read_post_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_read_post_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_read_post_preferences">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_read_post_age_1"
            style="@style/CustomPostGenderChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_read_post_age_2"
            style="@style/CustomPostGenderChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_read_post_age_3"
            style="@style/CustomPostGenderChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_read_post_age_4"
            style="@style/CustomPostGenderChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_read_post_gender"
            style="@style/CustomPostGenderChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"/>
    </com.google.android.material.chip.ChipGroup>

    <include
        android:id="@+id/layout_read_post_footer"
        layout="@layout/layout_footer_liked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>