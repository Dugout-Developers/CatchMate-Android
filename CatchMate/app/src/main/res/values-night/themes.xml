<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CatchMate" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand500</item>
        <item name="android:statusBarColor">@color/grey0</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/grey0</item>
        <item name="android:ambientShadowAlpha">0.02</item>
        <item name="android:spotShadowAlpha">0.03</item>
    </style>

    <style name="Theme.CatchMate" parent="Base.Theme.CatchMate"/>

    <style name="Theme.CatchMate.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brand500</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_splash_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/brand500</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.CatchMate</item>
    </style>
</resources>